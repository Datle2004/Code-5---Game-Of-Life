import pygame
import Start
import Game
import Advanced
import Example
import vd
pygame.init()
#create display window
SCREEN_HEIGHT = 800
SCREEN_WIDTH = 1200
def main():
	screen = pygame.display.set_mode((SCREEN_WIDTH, SCREEN_HEIGHT))
	pygame.display.set_caption("Conway's Game Of Life")
	font_title = pygame.font.Font('freesansbold.ttf', 100)
	background = pygame.transform.scale(pygame.image.load('conway.png').convert_alpha(), (SCREEN_WIDTH, SCREEN_HEIGHT))
	font_text = pygame.font.Font('freesansbold.ttf',50)
	start_text = font_text.render("Start",True,'white')
	advanced_text = font_text.render("Advanced",True,'white')
	example_text = font_text.render("Example",True,'white')
	start_button = Start.Button(start_text,450,600,10)
	advanced_button = Start.Button(advanced_text,100,600,10)
	example_button = Start.Button(example_text,800,600,10)
	#game loop
	run = True
	play = Game.Run(screen)
	while run:

		screen.blit(background,(0,0))
		start_button.draw(screen)
		advanced_button.draw(screen)
		example_button.draw(screen)
		pygame.display.update()

		#event handler
		for event in pygame.event.get():
			#quit game
			if event.type == pygame.QUIT:
				run = False
			elif event.type == pygame.MOUSEBUTTONDOWN:
					pos = pygame.mouse.get_pos()
					if start_button.get_pos().collidepoint(pos):
						play.screen.fill((202, 228, 241))
						pygame.display.update()
						play.main()
					elif advanced_button.get_pos().collidepoint(pos):
						metvcl = Advanced.Advanced(screen)
						metvcl.main()
					elif example_button.get_pos().collidepoint(pos):
						example = Example.Variant(screen)
						example.main()
					else:
						pass
			else:
				pass
					
				
		pygame.display.update()

	pygame.quit()
if __name__ == "__main__":
    main()
